{
  "name": "escolalms/images",
  "description": "Escola Headless LMS Images manipulation",
  "type": "package",
  "require": {
    "php": ">=8.0",
    "laravel/framework": ">=8.0",
    "escolalms/core": "^1",
    "intervention/image": "^2",
    "intervention/imagecache": "^2",
    "spatie/laravel-image-optimizer": "^1.7.1",
    "escolalms/settings": "^0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "orchestra/testbench": ">=5.0",
    "nunomaduro/larastan": "^2.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Mateusz Wojczal",
      "email": "mateusz.wojczal@escola.pl"
    }
  ],
  "autoload": {
    "psr-4": {
      "EscolaLms\\Images\\": "src",
      "EscolaLms\\Images\\Tests\\": "tests",
      "EscolaLms\\Images\\Database\\Factories\\": "database/factories"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "EscolaLms\\Images\\EscolaLmsImagesServiceProvider"
      ]
    }
  }
}
